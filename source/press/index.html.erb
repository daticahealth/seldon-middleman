<section class="section-article container-gray-11" id="pressReleases">
    <div class="row align-center">
        <div class="columns small-12 medium-8">
            <h2 class="headline-2 group text-center">Press Releases</h2>
        </div>
    </div>
    <div class="row row--card-grid small-up-1 medium-up-2 large-up-3 align-center">
        <% sorted_pressReleases = data.site.pressReleases.to_a.sort_by{ |id, post| post['pub_date'] }.reverse! %>
        <% sorted_pressReleases.take(6).each do | id, post | %>
            <div class="column">
                <div class="card drop-hover">
                    <div class="card-section">
                        <a href="/press-release/<%= post["slug"] %>/" title="Read press release">
                            <h3 class="headline-5"><%= post["title"] %></h3>
                        </a>
                            <p><span class="pub-date"><%= post['pub_date'].strftime('%B %-d, %Y') %></span></p>
                            <%= Kramdown::Document.new(post["summary"]).to_html %>

                    </div>
                    <div class="card-divider card-section--flush text-right">
                        <a href="/press-release/<%= post["slug"] %>/" title="Read press release">Read more <%= inline_svg("small/icon-angle-right", class: "icon-inline") %></a>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <div class="row align-center">
        <div class="columns small-12 medium-6 text-center">
            <a class="button button--primary" href="/press/all/" title="View all">View all Press Releases <%= inline_svg("small/icon-angle-right", class: "icon-inline") %></a>
        </div>
    </div>
</section>

<section class="section-article container-color--gray-light" id="pressCoverage">
    <div class="row align-center">
        <div class="columns small-12 medium-8">
            <h2 class="headline-2 group text-center">Company Press Coverage</h2>
        </div>
    </div>
    <div class="row small-up-1 medium-up-2 large-up-3 xlarge-up-4 full-width">
        <% press_mentions = data.site.quotes.to_a.select{ | id, quote | quote["quote_type"] == "press" } %>
        <% sorted_press_mentions = press_mentions.sort_by{ |id, quote| quote['date'] }.reverse! %>
        <% sorted_press_mentions.each do | id, quote | %>
            <aside class="column group">
                <blockquote class="quote--serif" cite="<%= quote["url"] %>">
                    <%= quote["quote_body"] %>
                </blockquote>
                <p class="pub-date blockquote-info"><%= quote['date'].strftime('%B %-d, %Y') %></p>
                <% if quote.has_key?("source_logo") %>
                    <p>
                    <a class="blockquote-info" href="<%= quote["url"] %>" title="Read the article on their website">
                        <img class="logo-size--medium img-multiply" src="<%= quote.source_logo.url %>" alt="<%= quote["source"] %>">
                    </a></p>
                <% end %>
                <% if quote.has_key?("source") %>
                    <p class="blockquote-info text-italic">
                        Source: <a href="<%= quote["url"] %>" title="Read the article on their website"><%= quote["source"] %></a>
                    </p>
                <% end %>
            </aside>
        <% end %>
    </div>
    <div class="row">
        <div class="columns small-12 text-center">
            <%= partial "partials/snippets/to-top"%>
        </div>
    </div>
</section>
