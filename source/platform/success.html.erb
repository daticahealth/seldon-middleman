<aside class="hide-for-large pad--sm container-color--blue-alt">
    <div class="row align-middle align-center">
        <div class="columns small-6 medium-4">
            <a href="/pricing" title="sign up" class="button button--light expanded small nomargin">Pricing <i class="fa fa-icon fa-angle-right"></i></a>
        </div>
    </div>
</aside>
<div class="container-color--white">
    <section class="section-article">
        <div class="row align-center">
            <div class="columns small-12 medium-12 large-7 text-center">
                <h1 class="headline-3">Healthcare's <strong>trusted</strong> partner</h1>
                <p>We are the compliance and data foundation for industry leaders and thought leaders, health systems and vendors.</p>
            </div>
        </div>
    </section>
</div>
<div id="successNav" class="show-for-large" data-sticky-container>
    <nav class="sticky sticky-nav sticky-nav--secondary container-gray-12 text-center full-width" data-sticky data-options="marginTop:3; topAnchor:successNav;">
        <ul class="menu horizontal align-center" data-magellan data-options="activeClass:is-current; offset: 50">
            <% data.views.proof.sectionNav.each do |item| %>
                <li class="menu-item">
                    <a href="#success<%= item["slug"] %>" title="<%= item["title"] %>" class="menu-item--link">
                        <%= item["label"] %>
                    </a>
                </li>
            <% end %>
        </ul>
    </nav>
</div>
<% sorted_customers = data.site.customers.to_a.sort_by{ |id, cf_customer | cf_customer['pub_date'] }.reverse! %>
<div class="" id="successCaseStudies" data-magellan-target="successCaseStudies">

<%= partial "partials/section-promos/aws-mlh-video", 
    :locals => {
        :quote_id => "5fDbO1XJ1CAEWAEIoiO6mS",
        :container_color => "container-gray-12"
        #:background => "https://images.contentful.com/189dvqdsjh46/55EpUazd5CQSqC66CaWYqI/fd3aa1534d8d641ee8bd60d3592e98a3/aws-mlh-diagram-k-alpha.png"
    }
%>
    <section class="section-article--med container-gray-11">
        <div class="text-center group">
            <h2 class="headline-3">A shared vision for the future of healthcare</h2>
        </div>
        <div class="multicol--cards-group">
            <% sorted_customers.each do | id, cf_customer | %>
                <% if cf_customer.has_key?("case_study") && cf_customer["case_study"].has_key?("media_object") %>
                    <div class="multicol--cards-group__item">
                        <%= partial "/partials/content/card-case-study",  :locals => { :cf_customer => cf_customer } %>
                    </div>
                <% end %>
            <% end %>
            <% sorted_customers.each do | id, cf_customer | %>
                <% if cf_customer.has_key?("case_study") && cf_customer["slug"] != current_page.data.featuredCase && cf_customer["case_study"].has_key?("media_object") == false %>
                    <div class="multicol--cards-group__item">
                        <%= partial "/partials/content/card-case-study",  :locals => { :cf_customer => cf_customer } %>
                    </div>
                <% end %>
            <% end %>
        </div>
    </section>
</div>
<section class="section-article" id="successSpotlights" data-magellan-target="successSpotlights">
    <div class="row align-center">
        <div class="columns small-12 large-8 text-center group">
            <h2 class="headline-2 group">Customer Spotlights</h2>
        </div>
    </div>
    <div class="row align-center">
        <div class="columns small-12 large-8">
            <% sorted_entries = data.site.spotlights.to_a.sort_by{ |id, entry| entry['title'] } %>
            <% sorted_entries.each do | id, entry | %>
                <article class="row item-list content-dynamic">
                    <div class="columns small-4 medium-3 large-4">
                        <a class="" href="/customer/<%= entry["customer"]["slug"] %>#spotlight">
                            <img class="" src="/public/img/customer-logos/<%= entry["customer"]["slug"] %>-logo.png" alt="<%= entry["customer"]["company_name"] %> Spotlight"/>
                        </a>
                    </div>
                    <div class="columns small-8 medium-9 large-8">
                        <p class="text-left"><%= entry["summary"] %><br>
                            <a title="Read more" href="/customer/<%= entry["customer"]["slug"] %>#spotlight">Read the <%= entry["customer"]["company_name"] %> Spotlight  <i class="fa fa-angle-right"></i></a>
                        </p>
                    </div>
                </article>
            <% end %>
        </div>
    </div>
</section>

<section class="section-article container-color--gray-light" id="successPartners" data-magellan-target="successPartners">
    <div class="row align-center">
        <div class="columns small-12 large-10 text-center group">
            <h2 class="headline-2">A trusted healthcare-only partner with the world's biggest cloud providers</h2>
        </div>
    </div>
