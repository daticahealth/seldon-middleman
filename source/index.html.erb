    <div class="row align-center">
        <div class="columns small-12 large-10 text-center">
            <h3 class="headline-3"><strong>World-class companies</strong> trust Datica</h3>
            <div class="logo-cloud">
                <% data.views.home.customers.each do |logo| # trying this as data-interchange for perf %>
                    <img data-interchange="[/public/img/customer-logos/sm/<%= logo['file'] %>.png, small]" alt="<%= logo["name"] %>" class="logo-cloud--item logo-size--<%= logo['logoSize'] %>" />
                <% end %>
            </div>
        </div>
    </div>
<!-- </section> -->
<hr class="divider">
<!-- <section class="section-article"> -->
    <div class="row align-center text-center">
        <div class="columns small-12 large-10">
            <h2 class="headline-3"><strong>Healthcare's best compliance coverage</strong> <br>for teams large and small</h2>
            <div class="logo-cloud">
                <% data.views.home.badges.each do |logo| # trying this as data-interchange for perf %>
                    <img data-interchange="[<%= logo['fileUrl'] %>?w=300, small]" alt="<%= logo['name'] %>" class="logo-cloud--item logo-size--<%= logo['logoSize'] %>" />
                <% end %>
            </div>
            <%= 
                partial "partials/snippets/button", 
                    :locals => {
                        :label => "Platform Compliance Overview", 
                        :title => "Read more", 
                        :url => "/platform/compliance", 
