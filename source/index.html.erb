                        :button_classes => "button hollow", 
                        :icon => "icon-chevron-right", 
                        :icon_color => "blue", 
                        :icon_align => "right"
                    }
                %>
        </div>
    </div>
</section>
<%
sorted_posts = data.site.blog.to_a.sort_by{ |id, post| post['pub_date'] }.reverse!
sorted_podcasts = data.site.podcast.to_a.sort_by{ |id, podcast| podcast['pub_date'] }.reverse!
sorted_academy = data.site.academy.to_a.sort_by{ |id, academy| academy['pub_date'] }.reverse!
sorted_reports = data.site.reports.to_a.sort_by{ |id, report| report['pub_date'] }.reverse!
%>
<section class="container-gray-10 section-article">
    <h3 class="headline-3 group text-center"><strong>Recently</strong> at Datica</h3>
    <div class="row row--card-grid align-center small-up-1 medium-up-3 large-up-3">
    <% sorted_posts.take(1).each do | id, blog_entry | %>
        <div class="column">
            <%= partial "partials/cards/featured-blog", :locals => { :post => blog_entry, :style => "light", :size => "small", :show_type => true } %>
        </div>
    <% end %>
    <% sorted_podcasts.take(1).each do | id, podcast_entry | %>
        <div class="column">
            <%= partial "partials/cards/featured-blog", :locals => { :post => podcast_entry, :style => "light", :size => "small", :show_type => true } %>
        </div>
    <% end %>
    <% sorted_reports.take(1).each do | id, report_entry | %>
        <div class="column">
            <div class="card container-gray-2">
                <div class="card-section">
                    <!-- <span class="card-header-subhead">Datica</span> -->
                    <% if report_entry.has_key?("subhead") %><div class="subheader-small color-white"><%= report_entry.subhead %></div><% end %>
                
                    <h3 class="headline-4">
                        <a class="link--white" href="/innovation/<%= report_entry.slug %>" title="Read report">
                            <%= report_entry.title %>
                        </a>
                    </h3>
                </div>
                <% if report_entry.has_key?("image_thumb") %>
                    <a class="text-center" href="/innovation/<%= report_entry.slug %>" title="Read report">
                        <img src="<%= report_entry.image_thumb.url %>?fit=thumb&w=500" width="250" alt="
                        report">
                    </a>
                <% end %>
            </div>
        </div>
    <% end %>
    </div>
</section>

