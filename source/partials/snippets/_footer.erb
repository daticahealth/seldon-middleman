<footer role="contentinfo" class="section-article container-color--gray-gradient main-footer">
    <div class="row small-up-2 medium-up-3 large-up-6">
        <% data.nav_all.each do |f| %>
            <div class="column group">
                <h5 class="headline-6"><%= f["title"] %></h5>
                <ul class="no-bullet">
                    <% if f.has_key?("children") %>
                        <% f["children"].each do |c| %>
                        <%# inner loop here %>
                            <li>
                                <%= current_link_to c.title, c.url, title: c.desc, class: "link--dark faded" %>
                        <% end %>
                    <% end %>
                </ul>
            </div>
        <% end %>
    </div>
    <div class="row">
        <div class="columns">
            <ul class="menu align-middle group">
                <li>
                    <a class="nav-logo--link" style="padding-left: 0;" href="/" title="Datica Home"><svg class="nav-logo" id=datica-logo-footer><use class=symbol-icon xlink:href="#datica-logo-horiz"></use></svg></a>
                </li>
                <% data.footer_misc.each do |m| %>
                    <li>
                        <%= current_link_to m.title, m.url, title: m.desc, class: "link--dark faded" %>
                <% end %>
            </ul>
            <div class="logo-cloud nopad">
                <img class="logo-cloud--item logo-size--medium lozad" data-src="https://images.ctfassets.net/189dvqdsjh46/7ioiPF1zVKiqYkyCe4QKGi/016f2d364265c04e12c7db4eae95f94c/hitrust-logo.svg" alt="HITRUST Certified" width="83" height="48" />
                <img class="logo-cloud--item logo-size--medium lozad" data-src="https://images.ctfassets.net/189dvqdsjh46/1db5oL4HFeKkSGGcCmQACW/4b650496f1136e1d76f0d88547f8e428/AICPA_SOC_2_badge.svg" alt="AICPA/SOC2 badge" width="58" height="58" />
                <img class="logo-cloud--item logo-size--medium lozad" data-src="https://images.ctfassets.net/189dvqdsjh46/2VnE1VKgSI0CigIaimYymm/8661955dacafd96c3c565bb5d1503dc8/coalfire-badge.png"  />
                    <%# <script defer type='text/javascript' src='https://www.coalfire.com/CMSPages/Coalfire/CertificateSealJS.aspx?cc=248fe0c0-6343-4785-9cb0-0602a6a82a6c'></script> %>
                <img class="logo-cloud--item logo-size--medium lozad" data-src="https://images.ctfassets.net/189dvqdsjh46/2qNhrxRsmEGqUOuCq2qWgU/7dc0a16f892c1950cb743bb3f54f1ad6/cncf-logo-horizontal-alt.svg" alt="Cloud native computing foundation" width="157" height="48" />
            </div>
        </div>
    </div>

</footer>
