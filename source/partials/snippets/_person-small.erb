<div class="media-object person-small">
    <% if p.has_key?("profile_pic") %>
        <div class="media-object-section media-object--avatar"><img src="<%= p["profile_pic"]["url"] %>?f=face&fit=thumb&w=250&q=35" class="avatar avatar--medium circle" alt="<%= p["fullname"] %>"></div>
    <% end %>
    <div class="media-object-section media-object--info main-section align-self-middle">
        <h4 class="person-name">
            <%= p["fullname"] %>
        </h4>
        <p class="person-title"><%= p["role"] %></p>
    </div>
</div>
