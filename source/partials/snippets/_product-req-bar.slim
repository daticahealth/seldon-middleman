section#productHelp.section-article.container-gray-11.container-image--center data-interchange="[#{section_img}?fit=thumb&w=640&h=360, small], [#{section_img}?fit=thumb&w=800&h=460, medium], [#{section_img}?fit=thumb&w=1600&h=600, large]"
  .row.align-center
    .column.small-12.medium-4
      h2.headline-2.text-center Get Help
  .row.align-center.align-middle
    .column.small-12.medium-8.large-4.large-order-2
      aside.card.container-gray-12.drop
        .card-section.text-center
          - data.nav_all[3..3].each do |nav_dropdown|
            - if nav_dropdown.has_key?("children")
              / .headline-5 = nav_dropdown.title
              ul.no-bullet
                - nav_dropdown["children"].each do |menu_child|
                  li
                    = current_link_to menu_child.title, menu_child.url, title: menu_child.desc, class: ""
                    p.text-small = menu_child.desc
                / li
                  = current_link_to "Public Roadmap", "/compliant-kubernetes-service/roadmap/", title: "View our public roadmap.", class: ""
                  p.text-small See what we're building.
    .column.small-12.medium-8.large-4.large-order-1
      a.card.card-add-feature.container-gray-6 data-toggle="requestFeature"
        .card-section.text-center
          h4.headline-4.text-light.text--white Request a feature
          = inline_svg("small/icon-plus-disc", class: "icon icon-size--large text--gray-8")
    .column.small-12.medium-8.large-4.large-order-3
      aside.card.container-color--tint-20
        .card-section.text-center
          h2.headline-4.text-light.text--white <strong>End-to-end compliance</strong> with Kubernetes<sup>&reg;</sup> is here.
          / p Schedule a demo to learn more.
          = partial "partials/snippets/button", :locals => { :label => "Schedule a demo today", :url => "/demo/", :button_classes => "button expanded group--sm", :icon => "icon-event-check", :icon_color => "white", :icon_align => "left" }
          = partial "partials/snippets/button", :locals => { :label => "Questions? Let's talk.", :url => "/contact/", :button_classes => "button expanded hollow hollow-inverted", :icon => "hubspot-chat-blue", :icon_align => "left" }

