<%
if defined?(style) && style == "dark"
    grayValue = "3"
else
    grayValue = "11"
end
%>
<section class="lozad section-article--med container-image--center container-gray-<%= grayValue %>" <% if defined?(bgImage) ? bgImage : '' %> data-background-image="<%= bgImage %>?fit=thumb&w=1800&h=500&fm=jpg&q=70"<% end %>>
    <div class="row align-center">
        <div class="columns small-12 medium-1 large-1 text-center">
            <%= inline_svg("icon-dollar-circle", class: "svg-color--white icon-size--large") %>
        </div>
        <div class="columns small-12 medium-9 large-6">
            <h2 class="headline-3">Total cost of Ownership of Healthcare Integrations</h2>
            <h4 class="headline-5">The comprehensive guide to healthcare integration TCO</h4>
            <p class="lead">The Datica guide to healthcare integration total cost of ownership will help give you the knowledge to determine your own TCO calculation.</p>
            <%= partial "partials/snippets/button", :locals => { :label => "Get your free TCO Integrations Guide", :url => "/guide/total-cost-of-ownership-of-integrations", :icon => "icon-download", :icon_color => "white", :icon_align => "left", :button_classes => "button button--light", :item_id => "guide_tco" } %>
        </div>
    </div>
</section>
