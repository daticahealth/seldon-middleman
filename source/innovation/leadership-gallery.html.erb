                            <% end %>
                            <!-- <a href="#content" class="">Back to top <i class="fa fa-angle-up" aria-hidden="true"></i></a> -->
                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div id="sidebar-nav" class="columns small-12 medium-5 large-4 container-gray-3">
            <ul id="lg-nav--tabs" class="vertical tabs group" data-tabs> <!-- data-deep-link="true" data-update-history="false" data-deep-link-smudge="true" data-deep-link-smudge="500" -->
                <li id="tab-intro" class="tabs-title lg-nav--item is-active" aria-selected="true">
                    <a href="#intro" title="Introduction">
                        <div class="lg-nav--item__leader">
                            <div class="media-object card-person">
                                <div class="media-object-section media-object--avatar"><img src="//images.ctfassets.net/189dvqdsjh46/yDosmOKtaKaeqgYWQoASy/a73851375766f82f4f24922b57e6caf2/prof-travis.jpg?f=face&amp;fit=thumb&amp;w=250&amp;q=45" class="avatar avatar--large circle" alt="Travis Good, MD"></div>
                                <div class="media-object-section media-object--info main-section align-self-middle">
                                    <h3 class="headline-5">Introduction</h3>
                                    <h4 class="person-name">
                                        Travis Good, MD
                                    </h4>
                                    <p class="person-title">Co-founder, CEO &amp; Chief Privacy Officer</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </li>
                <% sorted_entries.each do | index, entry | %>
                    <li id="tab-<%= entry["person_leader"]["slug"] %>" class="tabs-title lg-nav--item<% if sorted_entries[0][0] == index %> is-first<%end%>">
                        <a href="#<%= entry["person_leader"]["slug"] %>" title="<%= entry["summary"] %>">
                            <div class="media-object card-person">
                                <% if entry["person_leader"].has_key?("profile_pic") %>
                                    <div class="media-object-section media-object--avatar"><img src="<%= entry["person_leader"]["profile_pic"]["url"] %>?f=face&fit=thumb&w=128&h=128&fm=jpg&q=60" class="avatar avatar--large circle" alt="<%= entry["person_leader"]["fullname"] %>"></div>
                                <% end %>
                                <div class="media-object-section media-object--info main-section align-self-middle">
                                    <h3 class="headline-5"><%= entry["title"] %></h3>
                                    <h4 class="person-name">
                                        <%= entry["person_leader"]["fullname"] %>
                                    </h4>
                                    <% if entry["person_leader"].has_key?("role") %>
                                        <p class="person-title text-small faded"><%= entry["person_leader"]["role"] %></p>
                                    <% end %>
                                </div>
                            </div>

