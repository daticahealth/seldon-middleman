                        </div>
                        <% sorted_entries.each do | id, entry | %>
                        <div id="<%= entry["person_leader"]["slug"] %>" class="tabs-panel lg-entry group">
                            <h2 class="headline-3"><%= entry["title"] %></h2>
                            <%= partial("partials/snippets/person", :locals => { :p => entry["person_leader"] }) %>
                            <% if entry.has_key?("lead") %>
                                <div class="lead"><%= Kramdown::Document.new(entry["lead"]).to_html %></div>
                            <% end %>

                            <% if entry.has_key?("post") %>
                                <div class="hyphenate group">
                                    <%= Kramdown::Document.new(entry["post"]).to_html %>
                                </div>
                                <%= partial "/partials/snippets/share", :locals => { :classes => "show-for-medium group" }  %>
                                <div class="callout callout--gray-light group lg-leader">
                                    <%= partial("partials/snippets/person", :locals => { :p => entry["person_leader"] }) %>
                                    <% if entry["person_leader"].has_key?("bio_short") %>
                                        <em><%= Kramdown::Document.new(entry["person_leader"]["bio_short"]).to_html %></em>
                                    <% end %>
                                </div>
                                <div class="group">
                                    <% next_item = get_next_item(sorted_entries, entry, "title") %>
                                    <% if next_item != nil %>
                                        <div class="subhead--small text--spaced">Next</div>
                                        <p class="content-dynamic"><a href="#" title="Read the next article by <%= next_item["person_leader"]["fullname"] %>" onclick="$('#lg-nav--tabs').foundation('selectTab', '#<%= next_item["person_leader"]["slug"] %>');"><%= next_item["title"] %> <i class="fa fa-angle-right" aria-hidden="true"></i></a>
                                            <br><em><%= next_item["person_leader"]["fullname"] %></em>
                                        </p>
                                    <% else %>
                                        <div class="waypoint">
                                            <div class="waypoint-title subhead--small">Get your free Innovation Report</div>
                                            <a href="#cta" class="pulse" title="Learn more" data-smooth-scroll data-animation-duration="200" data-animation-easing="swing">
                                                <i class="waypoint-icon fa fa-icon fa-4x fa-angle-down"></i>
