<%
sorted_entries = data.site.leadershipGallery.to_a.sort_by{ |id, entry| entry['title'] }
%>

<div class="lg container-color--dark-alt">
    <%= partial "partials/head/header", :locals => { :style => "light" } %>
</div>

<section id="content" class="">
    <div class="row collapse full-width">
        <div id="main-content" class="columns small-12 medium-7 large-8">
            <div class="row collapse align-center">
                <div class="columns small-12 large-10 xxlarge-9">
                    <div class="lg-content tabs-content" data-tabs-content="lg-nav--tabs">
