section#hitrust.section-article.container-gray-11
  .row.align-center.group
    .columns.small-12.medium-10.large-8.text-center
      img.lozad.logo-size--large.group--sm data-src="https://images.ctfassets.net/189dvqdsjh46/7ioiPF1zVKiqYkyCe4QKGi/6438fbb76abda83deac6b9c810745891/hitrust-logo.svg?fm=png&w=480" alt="HITRUST Certified"
