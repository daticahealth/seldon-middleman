section#resources.section-article.bg-gray-11
  - related_entries = data.site.collections.to_a.select { |id, entry | (id == "5Lty4ePvawI0SKMa8S4aIc") }
  - related_entries.each do | id, collection |
    .row.align-center
      .columns.small-12.medium-10.large-7.text-center
        h1.headline-4.spaced-out = collection.title
        h2.headline-2 = collection.subhead
        - if collection.has_key?("desc")
          p.lead.line-length.margin-auto = collection.desc
    / This partial iterates through a CF collection datatype (itself just a basic entry type, that references others). 
    - collection["related_entries"].each_with_index do | entry, index |
      - type = entry._meta.content_type_id
      - folder = case type
      - when "caseStudy" then "customer"
      - else type
      - url = "/#{folder}/#{entry.customer.slug}/"
      - title = entry.case_study_title
      - company = entry.customer.company_name

      - if index == 3
        section.section-article.container-gray-11
          .row.align-center
            .columns.small-12.large-11.text-center
              h3.headline-3 <strong>World-class companies</strong> trust Datica
              .logo-cloud
                - data.views.home.customers.each do |logo| # trying this as data-interchange for perf
                  img alt="#{logo["name"]}" class=("lozad logo-cloud--item logo-size--#{logo['logoSize']}") data-src="/public/img/customer-logos/sm/#{logo['file']}.png" /

      .row.align-center.align-middle.section-article--med
        .columns.small-12.medium-6.large-6.xlarge-5
          p
            a href=url
              img.logo-size--medium alt=("#{company} Logo") src="/public/img/customer-logos/#{entry.customer.slug}-logo.png" /
          - if entry.has_key?("value_prop")
            h3.headline-4 = entry["value_prop"]
          - if entry.has_key?("customer_quote")
            blockquote.quote--serif
              = entry["customer_quote"]["quote_body"]
          - if entry["customer"].has_key?("profile_pic")
            = partial("partials/snippets/person", :locals => { :p => data.site.customers[entry.customer.id] })
          / h5.subhead--spaced = type.capitalize
          / p = (entry["customer"].has_key?("customer_story_short") ? entry.customer.customer_story_short : nil)
        .columns.small-12.medium-6.large-6.xlarge-7
          - if entry.has_key?("media_object")
            .group
              = entry["media_object"]
          h3.headline-4
            a href=url title=entry.title
              = entry.title
          = partial "partials/snippets/button", :locals => { :label => "Read the #{company} Case Study", :url => url, :icon_align => "left", :button_classes => "button secondary button--hover-compliance no-nudge", :icon => "icon-files", :item_id => "casestudy_#{entry.slug}", :data_track_group => "" }

