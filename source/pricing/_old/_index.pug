//- easy foundation tooltips, just pass the text and body of the tip. ex: +tip("20GB EBS", "Nightly backups are...")
mixin tip(label, body)
    span.has-tip.top(data-tooltip='', data-allow-html='true', aria-haspopup='true', data-disable-hover='false', title=body)=label

//- ---- content ----
mixin tier1
    h4.headline-5.no-margin Infrastructure
    p #[em Multi-tenant only]
    ul.price-info.fa-ul
        li
            i.fa-li.fa.fa-check
            +tip("6GB RAM", "This is customer-allocated RAM for your application. Datica's compliance components, like monitoring and logging, are standard for every customer and do not count against available RAM.")
        li
            i.fa-li.fa.fa-check
            +tip("20GB EBS", "Nightly backups are a standard component of Datica's compliance platform, and do not count against available storage.")
    h4.headline-5 Standard Support
    ul.price-info.fa-ul
        li
            i.fa-li.fa.fa-check
            | 9-5 Ticket Support
    h4.headline-5 Complete Compliance Coverage
    ul.price-info.fa-ul
        li
            i.fa-li.fa.fa-check
            | BAA
        li
            i.fa-li.fa.fa-check
            | Complete HIPAA Compliance™
        li
            i.fa-li.fa.fa-check
            | SOC2 Compliance
        li
            i.fa-li.fa.fa-check
            +tip("HITRUST CSF Certification & Inheritance", "Datica is HITRUST CSF Certified. Customers can inherit some of our controls while doing their own audits or certification pr0cess. l3arn more: datica.com/platform/compliance")

mixin tier1scaling
    .callout.callout--gray-light
        h4.headline-5 Scaling
        p
            | #[strong $100] per GB RAM / mo #[br]
            | #[strong $100] per 100GB File Storage /mo #[br]
            | #[strong $2.50] per GB EBS / mo

