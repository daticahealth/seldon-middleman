//- ----- structure --------
section.section-article.container-gray-12
    .row
        .columns.small-12.group
            h1.headline-1.text-center Pricing
    .row.hide-for-large.group.align-center
        .columns.small-12.medium-8
            ul#pricing-tabs.tabs(data-tabs='')
                li.tabs-title.is-active
                    a(href='#tier1', aria-selected='true') Developer
                li.tabs-title
                    a(href='#tier2') Growth
                li.tabs-title
                    a(href='#tier3') Enterprise

            .tabs-content(data-tabs-content='pricing-tabs')
                #tier1.tabs-panel.price-panel.drop.is-active
                    .group.price-card--section
                        h3.headline-4.price-info--price $1,000 / mo
                        a.button.button-primary.expanded.group Start your free trial
                            i.fa.fa-angle-right
                    .group.price-card--section
                        +tier1
                        +tier1scaling

                #tier2.tabs-panel.price-panel.drop
                    .group.price-card--section
                        h3.headline-4.price-info--price $3,300 / mo
                        a.button.button-primary.expanded.group Sign Up Today
                            i.fa.fa-angle-right
                        +tier2
                        +tier2scaling

                #tier3.tabs-panel.price-panel.drop
                    .group.price-card--section
                        h3.headline-4.price-info--price Custom
                        a.button.button-primary.expanded.group Contact us
                            i.fa.fa-angle-right
                        +tier3
                        +tier3scaling

    .row.show-for-large.row--card-grid.price
        .columns.small-12.medium-4.tier-dev
            .card.price-card
                .card-section.price-card--section
                    h3.headline-4.text-center Developer
                    hr.divider
                    +tier1
                .card-divider
                    +tier1scaling
                    h3.headline-4.price-info--price $1,000 / mo
                    a.button.expanded Start your free trial
                        i.fa.fa-angle-right

        .columns.small-12.medium-4.tier-grow
            .card.price-card
                .card-section
                    h3.headline-4.text-center Growth
                    hr.divider
                    +tier2
                .card-divider.price-card--section
                    +tier2scaling
                    h3.headline-4.price-info--price $3,300 / mo
                    a.button.expanded Sign Up Today
                        i.fa.fa-angle-right

        .columns.small-12.medium-4.tier-ent
            .card.price-card
                .card-section
                    h3.headline-4.text-center Enterprise
                    hr.divider
                    +tier3
                .card-divider.price-card--section
                    +tier3scaling
                    h3.headline-4.price-info--price Custom
                    a.button.expanded Contact us
                        i.fa.fa-angle-right
    .row.row--card-grid
        .columns.small-12.medium-8.medium-offset-2.large-8.large-offset-0
            .card.container-gray-11
                .card-section
                    h5.headline-6 Add-on Pricing (FPO)
                    ul
                        li 24/7 Ticket & Phone Support
                        li Dedicated account manager
                        li 20 hours of one-time on-boarding support
                        li 20 hours of yearly audit support
                        li Quarterly Product Roundtable
