---
layout: basic
customCSS: guide
ogType: article
---
<% p = locals[:item]
current_page.data.title = p["title"] + " | Datica Guide"
current_page.data.summary = safe_summary(p.summary)
if p.has_key?("share_image")
    current_page.data.share_image = cf_asset_protocol + p["share_image"]["url"] + image_size_small
end
if p.has_key?("bg_image")
        header_options = 'class="section-article container-image-fill" data-interchange="[' + p.bg_image.url + image_featured_large + ', medium]'
    else
        header_options = 'class="section-article"'
end

if p.has_key?("tags")
    current_page.data.tags = get_tag_list(p["tags"])
else
    current_page.data.tags = "healthcare, blog, IT"
end
if p.has_key?("author")
    current_page.data.author = p["author"]["fullname"]
else
    current_page.data.author = "Datica, Inc."
end
if p.has_key?("pub_date")
    current_page.data.date = p['pub_date'].strftime('%B %-d, %Y')
else
    current_page.data.date = "January 1, 2017"
end
%>
<div class="container-color--dark-alt">
    <div class="container-color--tint-20">
        <%= partial "partials/head/header", :locals => { :style => "light" } %>
    </div>
    <section <%= header_options %>>
        <div class="row align-middle">
            <header class="columns small-12 medium-8">
                <div class="subhead--spaced faded headline-5">Datica Guides</div>
                <h1 class="headline-2"><%= p["title"] %></h1>
            </header>
            <div class="columns small-12 medium-4">
                <% if p.has_key?("image_thumb") %>
                    <img data-interchange="[<%= p["image_thumb"]["url"] %>?w=300, small], [<%= p["image_thumb"]["url"] %>?w=500, medium]" alt="Datica Guide: <%= p["title"] %>" />
                <% end %>
            </div>
        </div>
    </section>
</div>
<section class="section-article container-gray-12">
    <% if p.has_key?("subhead") %>
        <div class="row">
            <div class="columns small-12 large-10">
                <h2 class="headline-3"><%= p["subhead"] %></h2>
            </div>
        </div>
    <% end %>
    <div class="row align-middle">
        <div class="columns small-12 medium-7 large-6">
            <% if p.has_key?("desc") %>
                <article class="content-dynamic">
                <%= Kramdown::Document.new(p["desc"]).to_html %>
                </article>
            <% end %>
        </div>
        <% if p.has_key?("authors") %>
            <aside class="columns small-12 medium-5 large-4 section--sidebar">
                <div class="callout drop">
                    <div class="subhead--spaced faded headline-5 text-center group--sm"><% if p["authors"].count > 1 %>With expert authors<% else %>Datica expert<% end %></div>
                    <% p["authors"].each do |author| %>
                        <p><%= partial("partials/snippets/person", :locals => { :p => author }) %></p>
                    <% end %>
                </div>
            </aside>
        <% end %>
    </div>
</section>
<section class="section-article container-color--blue-alt">
    <div class="row align-center">
        <div class="columns small-12 medium-7 large-6 large-order-2">
            <% if p.has_key?("form_id") %>
                <div class="callout callout--large drop">
                    <h3 class="headline-4 text-center group">Get your copy of the guide</h3>
                    <%= partial("partials/snippets/form-hubspot", :locals => { :form_id => p["form_id"] }) %>
                </div>
            <% end %>
        </div>
        <div class="columns small-12 medium-5 large-6 large-order-1">
            <div class="callout callout--dark-alpha">
                <% if p.has_key?("guide_text") %>
                    <article class="content-dynamic">
                        <%= Kramdown::Document.new(p["guide_text"]).to_html %>
                    </article>
                <% end %>
                <% if p.has_key?("cta_ref") %>
                    <%= partial("/partials/content/cta", :locals => { :p => p["cta_ref"] }) %>
                <% end %>
            </div>
        </div>
    </div>
</section>
